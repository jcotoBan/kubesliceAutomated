{% for index in range(regions_array_code | length) %}
controllerSecret:
  namespace: {{ workers_controller_namespaces[index] }} 
  endpoint: {{ workers_controller_endpoints[index] }}
  ca.crt: {{ workers_controller_ca_crts[index] }}
  token: {{ workers_controller_tokens[index] }}

cluster:
  name: {{worker_cluster_label ~ '-' ~ item }}
  endpoint: {{ workers_endpoints[index] }}

netop:
  networkInterface: eth0

imagePullSecrets:
  repository: https://index.docker.io/v1/
  username: {{ license_username }} 
  password: {{ license_password }}
  email:    {{ license_email }}
---
{% endfor %}
